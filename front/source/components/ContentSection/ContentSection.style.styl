@import "../../style/_variables.styl"

.content-section
  width: 100%
  padding-top: 0
  padding-bottom: 50px
  margin-bottom: 40px
  background-color: #fff

.content-section__header
  margin-bottom: 50px

.content-section__title
  margin-top: 50px
  margin-bottom: 40px
  font-size: font-size-title-base
  line-height: line-height-title-base
  text-align: center
  color: color-title-base
  text-transform: uppercase
  font-weight: 600

.content-section__title--secondary
  margin-top: 30px
  margin-bottom: 20px
  font-size: 20px

.content-section__text
  width: 75%
  margin-left: auto
  margin-right: auto
  line-height: (26 / 14)
  text-align: center

  p
    margin-top: 0

    &:last-child
      margin-bottom: 0
