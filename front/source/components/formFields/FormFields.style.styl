.input-file
  position: relative
  padding-top: 20px

.input-file__label
  display: block
  width: 100%
  min-height: 44px
  padding-right: 90px
  border: 2px solid #ededed
  border-radius: 8px
  outline: none

  &::before
    content: ""
    position: absolute
    top: 20px
    height: 44px
    right: 85px
    width: 2px
    background-color: #ededed

  &::after
    content: ""
    position: absolute
    top: 31px
    right: 30px
    width: 24px
    height: 22px
    background-image: url(./images/import.svg)
    background-repeat: no-repeat
    background-position: 50% 0

.input-file__placeholder
  text-ellipsis()
  position: absolute
  top: 29px
  left: 20px
  right: 95px
  display: inline-block
  font-weight: 500
  color: #b8b8b8
  text-align: left
  vertical-align: middle
  transition-property: opacity
  transition-duration: duration-base

.input-file__placeholder--error
  color: red

.input-file__placeholder--value
  color: #333

.input-file__mark
  position: absolute
  left: 20px
  right: 0
  top -3px
  display: inline-block
  font-weight: 500
  color: #b8b8b8
  text-align: left
  vertical-align: middle
  transition-property: opacity
  transition-duration: duration-base

.input-file__mark--error
  color: red

.input-file__field
  visually-hidden()

[dir=rtl] .input-file__placeholder
  right: 105px
  left: 0
  text-align: right
