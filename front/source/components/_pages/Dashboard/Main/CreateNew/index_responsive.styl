//For tablet 
@media screen and (max-width: 1024px) {
    .createNewTab__board {
        padding: 10px
        .sign-up__row {
            flex-flow: column nowrap

            .form-control {
                width: 100%
            }
        }
        
        .sign-up__container {
            flex-flow: column nowrap

            .sign-up__column {
                flex-basis: 100%
                margin-bottom: 0
            }
            .NewTeamMember__group {
                flex-basis: 100%
                width: 100%
                margin-bottom: 30px
            }
        }
        .sign-up__add-button-wrapper {
            height: 170px
            padding-top: 30px    
            flex-flow: column nowrap
            justify-content: space-between

            button{
                width: 80% !important
            }
        }
    }
}

@media screen and (max-width: 768px)  {
     .createNewTab__board {
         .sign-up__add-button-wrapper {

            button{
                width: 100% !important
            }
        }

        .sign-up__column--createNewTab {
            div:nth-child(1),
            div:nth-child(2),
            div:nth-child(3),
            div:nth-child(4){
                width: 100%
            }
        }
     }
}