.LogOut {
	position fixed
	width: 100vw
	height: 100vh
	top: 0
	left:0
	display flex
	align-items: center
	justify-content: center
	z-index 1000
		
}
.LogOut__backdrop {
	position: absolute
	width: 100vw
	height 100vh
	top: 0
	left: 0
	z-index: 1050
	background-color: rgba(0,0,0,.3)
	
}
.LogOut__modal-wrapper {
	width: 400px
	height 200px
	background-color: white
	z-index: 1100
	border-radius: 10px
	padding: 50px
	display flex
	flex-flow: column nowrap
	align-items center
	justify-content: space-between
	position relative
}
.LogOut__close-button {
	position absolute
	top: 10px
	right: 10px
	width: 20px
	height 20px
	cursor: pointer
}
.LogOut__close-button svg {
	display block
	width: 100%
	height 100%
}
.LogOut__text {
	font-size 16px
	font-weight: 600
}
.LogOut__button {
	width: 80%
	text-align center
	color: white
	font-size 16px
	font-weight: 600
	padding: 5px 0
	border-radius 5px
	cursor: pointer
	background-color #6ab142
}
.LogOut__button:hover{
	background-color: #558e35;	
}