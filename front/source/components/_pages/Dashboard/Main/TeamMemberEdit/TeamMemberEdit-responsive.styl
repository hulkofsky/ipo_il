@media screen and (max-width: 1024px) {
    .TeamMemberEdit{

        &__save-button{
            width: 100px
            top: 70px
            left: calc(50% - 50px)
        }
        .TeamMemberEdit__main-container {

            margin-top: 20px
            &>div{
                &:first-child {
                    width: 100%    
                }
                &.sign-up__column.sign-up__column--mb {
                    padding-right: 0
                }
            }    
        }

        .sign-up__column {
            padding-right: 0
            
        }
        .Backdrop__icon{
            margin: 20px 0 40px 0
        }
    }
}

@media screen and (max-width: 450px) {
    .TeamMemberEdit__main-container{
        &>div{
            &:last-child{
                width: 90%
            }
        }

        .Backdrop__photo-container--empty{
            padding: 20px
        }

        .Backdrop__button-add-file{
            padding: 10px 10px
            // font-size: 14px    
        }
    }  

}