@media screen and (max-width: 1600px) {
    .project-enterpreneur{
        .tabs__nav-item{
            margin: 0    
        }
        .project-bottom{
            flex-flow: column nowrap    

            .project__team{
                margin: 0    
                max-width: 100%
            }
            .project__docs{
                margin-top: 20px
            }
        }
    }    
}

