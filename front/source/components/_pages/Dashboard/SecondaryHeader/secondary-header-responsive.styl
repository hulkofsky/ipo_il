@media screen and (max-width: 450px) and (orientation: portrait) {
    .dash-main{
        .secondary-header{
            .crumbs{
                margin: 10px 0
            }
            .secondary-header__controls{
               align-items: stretch
               padding: 0 20px

               .secondary-header__filter{
                   justify-content: flex-end

                   .secondary-header__select{
                       width: 80%

                        .select{
                            width: 100%      
                        }
                    }
                }
            }
        }
    }    
}