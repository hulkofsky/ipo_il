@import "../../../style/_variables.styl"
@import "../../../style/_mixins.index.styl"

.sign-up
  padding-left: 50px
  padding-right: 50px

.sign-up__login
  position: relative
  padding-top: 50px
  display: flex
  justify-content: center

  &::before
    content: ""
    position: absolute
    top: 0
    left: 85px
    height: 2px
    width: 830px
    background-color: #ededed

.sign-up__login-text
  display: inline-block
  font-weight: 600
  vertical-align: middle
  font-size: 16px
  line-height: (19 / 16)

.sign-up__link
  display: inline-block
  padding-left: 5px
  font-weight: 600
  vertical-align: middle
  font-size: 16px
  line-height: (19 / 16)
  text-transform: uppercase
  color: blue
  text-decoration: none

.sign-up__switch
  display: flex
  flex-wrap: wrap
  flex-direction: row
  justify-content: center
  margin-bottom: 40px

.sign-up__radio-button-wrapper
  margin-right: 150px

  &:last-child
    margin-right: 0

.sign-up__radio-button-label
  position: relative
  padding-left: 60px
  color: blue
  font-weight: 600
  font-size: 18px
  line-height: (21 / 18)
  text-align: center
  cursor: pointer

  &::before
    content: ""
    position: absolute
    top: 2px
    left: 0
    width: 20px
    height: 20px
    border: 2px solid blue
    border-radius: 50%

  &::after
    content: ""
    position: absolute
    top: 7px
    left: 5px
    width: 10px
    height: 10px
    border-radius: 50%

.sign-up__radio-button-label--active
  &::after
    background-color: blue

.sign-up__radio-button
  visually-hidden()

.sign-up__checkbox-wrapper
  margin-top: 25px
  margin-right: 150px

  &:last-child
    margin-right: 0

.sign-up__checkbox-label
  position: relative
  padding-left: 40px
  font-size: 14px
  line-height: (16 / 14)
  font-weight: 400
  text-align: center

  .sign-up__link
  span
    display: inline-block
    vertical-align: bottom

  &::before
    content: ""
    position: absolute
    top: 3px
    left: 0
    width: 20px
    height: 20px
    border: 2px solid blue
    border-radius: 50%

  &::after
    content: ""
    position: absolute
    top: 3px
    left: 0
    width: 20px
    height: 20px
    border-radius: 50%
    background-repeat: no-repeat
    background-position: 50% -1.5px

.sign-up__checkbox-label--active
  &::after
    background-image: url(./images/checked.svg)

.sign-up__checkbox
  visually-hidden()

.sign-up__form-main
  display: flex
  flex-direction: row
  justify-content: space-between
  flex-wrap: wrap

  & > *
    flex: 0 0 45%

.sign-up__button-wrapper
  padding-top: 50px
  padding-bottom: 50px
  text-align: center

.sign-up__submit-button
  width: 235px

