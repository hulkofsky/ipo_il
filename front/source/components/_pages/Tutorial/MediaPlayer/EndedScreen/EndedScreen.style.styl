.media-player__end
  z-index: 1000
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  background-color: #000

.media-player__box
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

.media-player__btn-replay
  width: 82px
  height: 82px
  margin-bottom: 50px


.media-player__btn-delete
  width: 220px
  padding: 20px 25px
  text-align: center
  text-transform: uppercase
  font-size: 16px
  line-height: 1
  color: #fff
  font-weight: 600
  border-radius: 8px
  background-color: rgba(#fff, 0.3)
  border-color: transparent
  cursor: pointer
  outline: none

  &:hover
    background-color: rgba(#fff, 0.6)

  &:active
    background-color: rgba(#fff, 0.4)
