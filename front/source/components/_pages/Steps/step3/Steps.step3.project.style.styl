@import "../../../../style/_variables.styl"

.steps-page__project
  padding-top: 50px

.steps-page__project-title
  margin-top: 0
  margin-bottom: 40px
  text-align: center
  color: blue
  font-weight: 600
  font-size: 18px
  line-height: (21 / 18)

.steps-page__project-inner-wrapper
  display: flex
  flex-direction: row
  justify-content: space-between

.steps-page__project-left
  flex: 0 0 62%

.steps-page__project-right
  display: flex
  flex-direction: column
  align-items: center
  flex: 0 0 33%

.steps-page__project-text
  padding-left: 40px
  text-align: left

  p
    margin-top: 0

.steps-page__project-pledged
  margin-bottom: 55px
  color: blue
  font-weight: 700
  font-size: 24px
  line-height: (45 / 24)
  text-align: center

.steps-page__project-progress
  margin-bottom: 25px

  .progress-bar-circle
    width: 200px
    height: 200px

  .progress-bar-circle__percent
    font-weight: 600
    font-size: 48px
    text-align: center

.steps-page__project-finish-time
  font-size: 18px
  line-height: (34 / 18)
  color: #8b8b8b