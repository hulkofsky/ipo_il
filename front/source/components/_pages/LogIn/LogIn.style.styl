@import '../../../style/_variables.styl'
@import '../../../style/_mixins.index.styl'

.log-in
  position: relative
  padding-left: 50px
  padding-right: 50px

.log-in__container
  margin-left: auto
  margin-right: auto
  width: 430px

.log-in__forgot
  display: flex
  justify-content: flex-end /* rtl: flex-start */

.log-in__forgot-link
  font-weight: 500
  color: blue

.log-in-modal
  z-index: 1000
  position: fixed
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  min-width: 750px
  min-height: 150px
  padding: 10px 45px 35px 45px
  background-color: #fff
  border-radius: 8px
  overflow: hidden

.log-in-modal__button-wrapper
  z-index: 1000
  position: absolute
  top: 30px
  right: 30px
  width: 45px
  height: 45px

.log-in-modal__button
  display: block
  width: 45px
  height: 45px
  background-image: url(./images/close.svg)
  background-repeat: no-repeat
  background-position: 50% 50%;
  background-size: 45px 45px

.log-in-modal__button-text
  visually-hidden()

.log-in__title
  padding-left: 100px
  padding-right: 100px
  text-align: center
  font-weight: 600
  font-size: 24px
  line-height: (48 / 24)
  color: blue

.log-in__text
  margin-bottom: 10px
  text-align: center
  font-weight: 500
  font-size: 18px
  line-height: (36 / 18)

.log-in__text-small
  font-weight: 500
  text-align: center
  line-height: (28 / 14)

.log-in-modal__button-ok-wrapper
  text-align: center
  padding-top: 30px

.log-in-modal__button-ok
  width: 235px

.log-in__text-link
  color: green
  text-decoration: none

.login__form-forgot-p-field
  width: 50%
  margin-right: auto
  margin-left: auto

