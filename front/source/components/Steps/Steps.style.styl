@import "../../style/_variables.styl"

.steps__progress
  display: flex
  flex-direction: row
  flex-wrap: wrap

.step__item
  cursor: pointer
  width: 117px
  margin-right: 103px /* rtl: 0 */
  margin-left: 0 /* rtl: 103px */


  &:last-child
    margin-right: 0

  &:first-child
    .steps__number-wrapper
      &::before
        display: none

.steps__title
  margin-bottom: 9px
  font-weight: 500
  color: blue
  text-align: center

.steps__number-wrapper
  position: relative
  padding-top: 13px
  padding-bottom: 13px
  font-weight: 500
  text-align: center
  border: 2px solid blue
  border-radius: 8px

  &::before
    content: ""
    position: absolute
    top: 50%
    right: 115px /* rtl: -105px */
    width: 103px
    height: 2px
    background-color: blue
    transform: translateY(-50%)

.steps__number
  color: blue

.step__item--default
  cursor: default
  .steps__title
  .steps__number
    color: gray

  .steps__number-wrapper
    border-color: gray

    &::before
      background-color: gray

.step__item--passed
  .steps__title
    color: blue

  .steps__number
    color: white

  .steps__number-wrapper
    border-color: blue
    background-color: blue

    &::before
      background-color: blue

