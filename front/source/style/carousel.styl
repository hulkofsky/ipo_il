@import "./_variables.styl"
@import "./_mixins.index.styl"

.slider-control-centerleft
.slider-control-centerright
  display: none

.slider-control-bottomcenter

  li
    margin-right: 20px

    &:last-child
      margin-right: 0

  button
    position: relative
    width: 30px
    height: 30px
    padding: 0
    font-size: 0 !important
    background-color: transparent
    border: none
    outline: none
    cursor: pointer

    &::before
      content: ""
      center-element()
      width: 10px
      height: 10px
      border-radius: 50%
      background-color: blue
